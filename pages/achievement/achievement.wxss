/* 成就展厅页面样式 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100vw;
  min-height: 100vh;
  background: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI';
  line-height: 1.4;
}

/* 状态栏占位 */
.status-bar {
  height: 44px;
}

/* 头部导航 */
.header {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  height: 56px;
  padding: 0 24px;
}

.back-btn {
  position: absolute;
  left: 24px;
}

.back-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  box-shadow: 5px 0 4px -3px rgba(255, 255, 255, 0.6) inset, -5px 0 4px -3px rgba(255, 255, 255, 0.8) inset;
  color: rgba(30, 41, 57, 1);
  font-size: 18px;
  font-weight: bold;
}

.title {
  color: rgba(16, 24, 40, 1);
  font-size: 20px;
  font-weight: 300;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  margin-top: 24px;
  padding: 0 24px 120px 24px;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
}

/* 成就概览 */
.overview-section {
  margin-bottom: 24px;
}

.overview-card {
  display: flex;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  border-radius: 22px !important;
  padding: 20px;
  box-shadow: 5px 0 4px -3px rgba(255, 255, 255, 0.6) inset, -5px 0 4px -3px rgba(255, 255, 255, 0.8) inset;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
}

.overview-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.overview-number {
  font-size: 24px;
  font-weight: 700;
  color: rgba(30, 41, 57, 1);
}

.overview-label {
  font-size: 12px;
  color: rgba(30, 41, 57, 0.6);
}

/* 通用区块标题 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.title-icon {
  font-size: 20px;
  margin-right: 8px;
}

.title-text {
  font-size: 16px;
  font-weight: 600;
  color: rgba(16, 24, 40, 1);
}

/* 最新成就 */
.latest-section {
  margin-bottom: 24px;
}

.latest-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  border-radius: 22px !important;
  padding: 20px;
  box-shadow: 5px 0 4px -3px rgba(255, 255, 255, 0.6) inset, -5px 0 4px -3px rgba(255, 255, 255, 0.8) inset;
  gap: 16px;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
}

.achievement-badge {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 4px 15px rgba(118, 200, 147, 0.4);
}

.badge-icon {
  font-size: 28px;
}

.achievement-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.achievement-name {
  font-size: 16px;
  font-weight: 600;
  color: rgba(30, 41, 57, 1);
}

.achievement-description {
  font-size: 14px;
  color: rgba(30, 41, 57, 0.8);
  line-height: 1.4;
}

.achievement-date {
  font-size: 12px;
  color: rgba(30, 41, 57, 0.6);
}

/* 成就分类 */
.category-section {
  margin-bottom: 24px;
}

.category-tabs {
  display: flex;
  gap: 8px;
  overflow-x: auto;
  padding-bottom: 4px;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px 16px;
  background: rgba(148, 163, 184, 0.15);
  border-radius: 12px;
  min-width: 80px;
  gap: 4px;
  box-shadow: 1px 2px 12px 0 rgba(148, 163, 184, 0.12) inset;
}

.tab-item.active {
  background: rgba(255, 255, 255, 0.3);
  box-shadow: 5px 0 4px -3px rgba(255, 255, 255, 0.6) inset, -5px 0 4px -3px rgba(255, 255, 255, 0.8) inset;
}

.tab-icon {
  font-size: 20px;
}

.tab-text {
  font-size: 12px;
  color: rgba(74, 85, 101, 1);
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: rgba(30, 41, 57, 1);
  font-weight: 600;
}

/* 成就列表 */
.achievements-section {
  margin-bottom: 24px;
}

.achievement-item {
  display: flex;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  border-radius: 22px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 5px 0 4px -3px rgba(255, 255, 255, 0.6) inset, -5px 0 4px -3px rgba(255, 255, 255, 0.8) inset;
  gap: 16px;
  align-items: flex-start;
}

.achievement-item.locked {
  opacity: 0.6;
}

.achievement-item .achievement-badge {
  width: 50px;
  height: 50px;
  font-size: 24px;
  flex-shrink: 0;
}

.achievement-item.locked .achievement-badge {
  background: rgba(255, 255, 255, 0.2);
  box-shadow: none;
}

.lock-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lock-icon {
  font-size: 16px;
  color: white;
}

.achievement-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.achievement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.achievement-item .achievement-name {
  font-size: 15px;
  font-weight: 600;
  color: rgba(30, 41, 57, 1);
}

.achievement-rarity {
  padding: 2px 8px;
  border-radius: 8px;
  font-size: 10px;
  font-weight: 500;
}

.achievement-rarity.common {
  background: rgba(156, 163, 175, 0.3);
  color: #d1d5db;
}

.achievement-rarity.rare {
  background: rgba(59, 130, 246, 0.3);
  color: #93c5fd;
}

.achievement-rarity.epic {
  background: rgba(147, 51, 234, 0.3);
  color: #c4b5fd;
}

.achievement-rarity.legendary {
  background: rgba(245, 158, 11, 0.3);
  color: #fcd34d;
}

.rarity-text {
  font-size: 10px;
}

.achievement-item .achievement-description {
  font-size: 13px;
  color: rgba(30, 41, 57, 0.7);
  line-height: 1.4;
}

.achievement-progress {
  display: flex;
  align-items: center;
  gap: 8px;
}

.progress-bar {
  flex: 1;
  height: 6px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  border-radius: 3px;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 11px;
  color: rgba(30, 41, 57, 0.6);
  min-width: 40px;
}

.achievement-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.achievement-points {
  font-size: 12px;
  color: #fcd34d;
  font-weight: 500;
}

.achievement-item .achievement-date {
  font-size: 11px;
  color: rgba(30, 41, 57, 0.5);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
  gap: 12px;
}

.empty-icon {
  font-size: 48px;
  opacity: 0.5;
}

.empty-text {
  font-size: 16px;
  color: rgba(30, 41, 57, 0.7);
  font-weight: 500;
}

.empty-hint {
  font-size: 14px;
  color: rgba(30, 41, 57, 0.5);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 12px;
  margin-bottom: 20px;
}

.action-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px 24px;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  border: none;
  gap: 8px;
}

.action-button.primary {
  background: linear-gradient(135deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  color: white;
  box-shadow: 0 4px 15px rgba(118, 200, 147, 0.4);
  font-weight: 700;
}

.action-button.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(30, 41, 57, 1);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.button-icon {
  font-size: 18px;
}

.button-text {
  font-size: 16px;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
  display: flex;
  padding: 16rpx 0 32rpx 0;
  box-shadow: 0 -8rpx 32rpx rgba(102, 126, 234, 0.15);
  z-index: 1000;
  transition: all 0.3s ease;
  border-top: 1rpx solid rgba(102, 126, 234, 0.1);
  transform: translateY(0);
  animation: slideInUp 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideInUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.bottom-nav.fixed {
  position: fixed;
  bottom: 0;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 8rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 16rpx;
  margin: 0 8rpx;
  position: relative;
  overflow: hidden;
}

.nav-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 16rpx;
  z-index: 0;
}

.nav-item:active {
  transform: scale(0.95);
}

.nav-item.active::before {
  left: 0;
}

.nav-item.active {
  box-shadow: 0 4rpx 16rpx rgba(118, 200, 147, 0.3);
}

.nav-item.active .nav-icon {
  color: #ffffff;
  transform: scale(1.1);
  z-index: 1;
  position: relative;
}

.nav-item.active .nav-label {
  color: #ffffff;
  font-weight: 600;
  z-index: 1;
  position: relative;
}

.nav-icon {
  font-size: 44rpx;
  margin-bottom: 6rpx;
  color: #8e9aaf;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  position: relative;
  z-index: 1;
}

.nav-label {
  font-size: 20rpx;
  color: #8e9aaf;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
  letter-spacing: 0.5rpx;
  position: relative;
  z-index: 1;
}



/* 成就详情弹窗 */
.achievement-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.achievement-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 20px;
  padding: 24px;
  max-width: 320px;
  width: 100%;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.achievement-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
  gap: 12px;
}

.modal-badge {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 25px rgba(118, 200, 147, 0.4);
}

.modal-icon {
  font-size: 40px;
}

.modal-title {
  font-size: 20px;
  font-weight: 700;
  color: #1f2937;
  text-align: center;
}

.modal-rarity {
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
}

.modal-body {
  margin-bottom: 24px;
}

.modal-description {
  font-size: 14px;
  color: #6b7280;
  line-height: 1.5;
  text-align: center;
  margin-bottom: 20px;
}

.modal-details {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 13px;
  color: #6b7280;
  font-weight: 500;
}

.detail-value {
  font-size: 13px;
  color: #1f2937;
  font-weight: 600;
}

.modal-footer {
  display: flex;
  justify-content: center;
}

.modal-button {
  padding: 12px 32px;
  background: linear-gradient(135deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  color: white;
  border: none;
  border-radius: 12px;
  font-size: 14px;
  font-weight: 700;
}