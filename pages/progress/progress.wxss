/* 进展反馈页面样式 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100vw;
  min-height: 100vh;
  background: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI';
  line-height: 1.4;
}

/* 状态栏占位 */
.status-bar {
  height: 44px;
}

/* 头部导航 */
.header {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  height: 56px;
  padding: 0 24px;
}

.back-btn {
  position: absolute;
  left: 24px;
}

.back-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  box-shadow: 5px 0 4px -3px rgba(255, 255, 255, 0.6) inset, -5px 0 4px -3px rgba(255, 255, 255, 0.8) inset;
  color: rgba(30, 41, 57, 1);
  font-size: 18px;
  font-weight: bold;
}

.title {
  color: rgba(16, 24, 40, 1);
  font-size: 20px;
  font-weight: 300;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  margin-top: 24px;
  padding: 0 24px 120px 24px;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
}

/* 通用区块样式 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.title-icon {
  font-size: 20px;
  margin-right: 8px;
}

.title-text {
  font-size: 16px;
  font-weight: 600;
  color: rgba(16, 24, 40, 1);
}

/* 执行总结区域 */
.summary-section {
  margin-bottom: 24px;
}

.summary-card {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  border-radius: 22px !important;
  padding: 20px;
  box-shadow: 5px 0 4px -3px rgba(255, 255, 255, 0.6) inset, -5px 0 4px -3px rgba(255, 255, 255, 0.8) inset;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-label {
  font-size: 14px;
  color: rgba(30, 41, 57, 0.6);
}

.summary-value {
  font-size: 18px;
  font-weight: 600;
  color: rgba(30, 41, 57, 1);
}

/* 趋势分析区域 */
.trend-section {
  margin-bottom: 24px;
}

.trend-card {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  border-radius: 22px !important;
  padding: 20px;
  box-shadow: 5px 0 4px -3px rgba(255, 255, 255, 0.6) inset, -5px 0 4px -3px rgba(255, 255, 255, 0.8) inset;
  margin-bottom: 20px;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
}

.chart-container {
  display: flex;
  align-items: end;
  justify-content: space-between;
  height: 120px;
  margin-bottom: 16px;
  padding: 0 10px;
}

.chart-bar {
  width: 30px;
  background: linear-gradient(to top, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  border-radius: 4px 4px 0 0;
  position: relative;
  min-height: 20px;
  display: flex;
  align-items: end;
  justify-content: center;
}

.bar-label {
  position: absolute;
  bottom: -20px;
  font-size: 10px;
  color: rgba(30, 41, 57, 0.7);
  text-align: center;
  width: 100%;
}

.trend-description {
  padding: 12px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
}

.trend-text {
  font-size: 14px;
  color: rgba(30, 41, 57, 0.9);
  line-height: 1.5;
}

/* AI反馈建议区域 */
.feedback-section {
  margin-bottom: 24px;
}

.feedback-card {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(8px);
  border-radius: 22px !important;
  padding: 20px;
  box-shadow: 5px 0 4px -3px rgba(255, 255, 255, 0.6) inset, -5px 0 4px -3px rgba(255, 255, 255, 0.8) inset;
  margin-bottom: 20px;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
}

.loading-feedback {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 20px;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(255, 255, 255, 0.3);
  border-top: 3px solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 14px;
  color: rgba(30, 41, 57, 0.8);
}

.feedback-content {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.feedback-content {
  font-size: 14px;
  line-height: 1.6;
  color: rgba(30, 41, 57, 1);
  margin-bottom: 12px;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
  display: flex;
  padding: 16rpx 0 32rpx 0;
  box-shadow: 0 -8rpx 32rpx rgba(102, 126, 234, 0.15);
  z-index: 1000;
  transition: all 0.3s ease;
  border-top: 1rpx solid rgba(102, 126, 234, 0.1);
  transform: translateY(0);
  animation: slideInUp 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideInUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.bottom-nav.fixed {
  position: fixed;
  bottom: 0;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 8rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 16rpx;
  margin: 0 8rpx;
  position: relative;
  overflow: hidden;
}

.nav-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 16rpx;
  z-index: 0;
}

.nav-item:active {
  transform: scale(0.95);
}

.nav-item.active::before {
  left: 0;
}

.nav-item.active {
  box-shadow: 0 4rpx 16rpx rgba(118, 200, 147, 0.3);
}

.nav-item.active .nav-icon {
  color: #ffffff;
  transform: scale(1.1);
  z-index: 1;
  position: relative;
}

.nav-item.active .nav-label {
  color: #ffffff;
  font-weight: 600;
  z-index: 1;
  position: relative;
}

.nav-icon {
  font-size: 44rpx;
  margin-bottom: 6rpx;
  color: #8e9aaf;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  position: relative;
  z-index: 1;
}

.feedback-item {
  padding: 16px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  border-left: 4px solid #76C893;
}

.feedback-type {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.feedback-icon {
  font-size: 16px;
  margin-right: 8px;
}

.feedback-label {
  font-size: 14px;
  font-weight: 600;
  color: rgba(30, 41, 57, 1);
}

.feedback-type.positive {
  color: #4ade80;
}

.feedback-type.warning {
  color: #fbbf24;
}

.feedback-type.suggestion {
  color: #60a5fa;
}

.feedback-text {
  font-size: 14px;
  color: rgba(30, 41, 57, 0.9);
  line-height: 1.5;
}

/* 改进建议区域 */
.improvement-section {
  margin-bottom: 24px;
}

.improvement-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  padding: 20px;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.improvement-item {
  padding: 16px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  margin-bottom: 16px;
}

.improvement-item:last-child {
  margin-bottom: 0;
}

.improvement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.improvement-title {
  font-size: 15px;
  font-weight: 600;
  color: rgba(30, 41, 57, 1);
}

.improvement-priority {
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 12px;
  font-weight: 500;
}

.improvement-priority.high {
  background: rgba(239, 68, 68, 0.2);
  color: #fca5a5;
}

.improvement-priority.medium {
  background: rgba(245, 158, 11, 0.2);
  color: #fcd34d;
}

.improvement-priority.low {
  background: rgba(34, 197, 94, 0.2);
  color: #86efac;
}

.improvement-description {
  font-size: 14px;
  color: rgba(30, 41, 57, 0.8);
  line-height: 1.5;
  margin-bottom: 12px;
}

.improvement-actions {
  display: flex;
  gap: 8px;
}

.action-btn {
  flex: 1;
  padding: 8px 16px;
  border-radius: 8px;
  font-size: 13px;
  font-weight: 500;
  border: none;
  background: linear-gradient(135deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  color: white;
  font-weight: 600;
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(30, 41, 57, 0.8);
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 20px;
}

.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px 24px;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  border: none;
  gap: 8px;
}

.action-button.primary {
  background: linear-gradient(135deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  color: white;
  box-shadow: 0 4px 15px rgba(118, 200, 147, 0.4);
  font-weight: 700;
}

.action-button.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(30, 41, 57, 1);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.button-icon {
  font-size: 18px;
}

.button-text {
  font-size: 16px;
}

/* 底部导航栏 */
.nav-label {
  font-size: 20rpx;
  color: #8e9aaf;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
  letter-spacing: 0.5rpx;
  position: relative;
  z-index: 1;
}