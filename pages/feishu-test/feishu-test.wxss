/* È£û‰π¶ÊµãËØïÈ°µÈù¢Ê†∑Âºè */
.container {
  min-height: 100vh;
  background: #f8f8f8;
}

/* ÂØºËà™Ê†è */
.navigation-bar {
  padding: 20rpx 0;
  padding-top: calc(20rpx + env(safe-area-inset-top));
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  height: 88rpx;
}

.nav-left {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.home-icon {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  position: relative;
}

.home-icon::before {
  content: 'üè†';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.nav-right {
  width: 80rpx;
}

/* ‰∏ªË¶ÅÂÜÖÂÆπ */
.main-content {
  padding: 32rpx;
}

/* ÊµãËØïÂå∫Âüü */
.test-section {
  margin-bottom: 48rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.title-actions {
  display: flex;
  align-items: center;
}

.clear-btn {
  font-size: 28rpx;
  color: #ff6b6b;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: rgba(255, 107, 107, 0.1);
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-left: 16rpx;
}

.status-unknown {
  background: #ccc;
}

.status-success {
  background: #4CAF50;
  box-shadow: 0 0 8rpx rgba(76, 175, 80, 0.5);
}

.status-failed {
  background: #f44336;
  box-shadow: 0 0 8rpx rgba(244, 67, 54, 0.5);
}

/* ÊµãËØïÂç°Áâá */
.test-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

/* Ë°®ÂçïÈ°π */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.picker {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.picker:active {
  border-color: #76C893;
  background: rgba(118, 200, 147, 0.1);
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.test-input {
  width: 100%;
  min-height: 120rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.test-input:focus {
  border-color: #76C893;
  background: rgba(118, 200, 147, 0.1);
}

/* ÊµãËØïÊåâÈíÆ */
.test-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #C6F8B2 0%, #76C893 50%, #4A7C59 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(118, 200, 147, 0.3);
}

.test-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(118, 200, 147, 0.3);
}

.test-btn.loading {
  opacity: 0.7;
  transform: none;
}

.test-btn.primary {
  background: linear-gradient(135deg, #4A7C59 0%, #76C893 50%, #C6F8B2 100%);
  box-shadow: 0 4rpx 16rpx rgba(74, 124, 89, 0.3);
}

.test-btn[disabled] {
  opacity: 0.6;
  transform: none;
}

/* ÊµãËØïÁªìÊûú */
.results-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 8rpx solid #ccc;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.result-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.result-success {
  border-left-color: #4CAF50;
}

.result-failed {
  border-left-color: #f44336;
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.result-type {
  display: flex;
  align-items: center;
}

.type-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.type-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.result-status {
  display: flex;
  align-items: center;
}

.status-icon {
  font-size: 32rpx;
}

.result-content {
  margin-bottom: 16rpx;
}

.result-message {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.result-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.result-line {
  font-size: 24rpx;
  color: #666;
}

.result-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  font-size: 24rpx;
  color: #76C893;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background: rgba(118, 200, 147, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  background: rgba(118, 200, 147, 0.2);
}

/* Á©∫Áä∂ÊÄÅ */
.empty-results {
  text-align: center;
  padding: 80rpx 32rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}